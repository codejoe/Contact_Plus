<h1>Listing contacts</h1>

<button type="button" class="btn btn-large btn-primary disabled">
  <%= link_to 'New Contact', new_contact_path %>
</button> 
 
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>User</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Group</th>
        <th>Email</th>
        <th>Address</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.user_id %></td>
          <td><%= contact.name %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.group.name if contact.group %></td>
          <td><%= contact.email %></td>
          <td><%= contact.address %></td>
          <td><%= link_to 'Show', contact %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= paginate @contacts %>


